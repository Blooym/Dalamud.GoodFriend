{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "incremental": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@middleware/*": [
        "Middleware/*"
      ],
      "@utils/*": [
        "Utils/*"
      ],
      "@routes/*": [
        "Routes/*"
      ],
      "@mtypes/*": [
        "Types/*"
      ],
      "@common/*": [
        "Common/*"
      ],
      "@services/*": [
        "Services/*"
      ],
    },
  },
  "include": [
    "./**/*"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}